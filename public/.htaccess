# Enable rewriting engine
RewriteEngine On
RewriteBase /

# Force HTTPS (only if SSL available)
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

# Allow direct access to the API folder (very important)
RewriteCond %{REQUEST_URI} ^/api/
RewriteRule ^ - [L]

# Allow direct access to existing files and folders
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Route all other requests to index.html (for SPA)
RewriteRule ^ index.html [L]
